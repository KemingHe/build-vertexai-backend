{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    
    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "python", "**/*.(spec|test).ts"]
}
